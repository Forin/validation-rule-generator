{
    "name": "jijoel/validation-rule-generator",
    "description": "Laravel 4 class to automatically generate validation rules based on table schema",
    "keywords": ["laravel", "validation", "schema"],
    "authors": [
        {
            "name": "Joel Hatch",
            "email": "jijoel@yahoo.com"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "illuminate/support": "~5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1@dev",
        "mockery/mockery": "^1.0@dev",
        "orchestra/testbench": "^3.9@dev",
        "doctrine/dbal": "^2.9@dev"
    },
    "autoload": {
        "psr-4": {
            "Jijoel\\ValidationRuleGenerator\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jijoel\\ValidationRuleGenerator\\ServiceProvider"
            ],
            "aliases": {
                "ValidationRuleGenerator": "Jijoel\\ValidationRuleGenerator\\Facade"
            }
        }
    },

    "minimum-stability": "dev"
}
